<h1>Welcome <%= @user.name %>!!</h1>


<div id="new_post">
   <form action="/posts" method="post">
      <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>

      <label for="post">New Idea:  <textarea name="post[content]" placeholer="Post Something Witty Here..."></textarea></label>
      <input type="submit" value="Create Idea">
  </form>
</div><br><hr>

<div id="posts">
  <h3>Posts:</h3><hr>
  <% if @posts != nil %>
      <% @posts.each do |post| %>
         <p><a href="/users/<%= @user.id %>"><strong><%= post.user.name%></a> says:</strong> <%= post.content %></p><hr>
         <% if post.users_liked_post.include?(current_user) %>
             <form action='/likes' method='post'>
                <input type='hidden' name='_method' value='delete'>
                <input type='hidden' name='post_id' value='<%= post.id %>'>
                <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
                <input type='submit' name="unlike" value='Unlike'>
             </form>
             <p> <a href="/posts/<%= @post.id %>"><%= post.likes.count %></a> Person Likes This</p>
         <% else %>
             <form action='/likes' method='post'>
                <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
                <input type='hidden' name='post_id' value='<%= post.id %>'>
                <input type='submit' name="like" value='Like Idea'>
             </form><hr>
         <% end %>

         <% if post.user == current_user %>
             <form action="/posts/<%= post.id %>" method="post">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <input name="_method" value="delete" type="hidden">
                <input type="submit" value="Delete Post">
             </form>
          <% end %>
      <% end %>
   <%end%>
</div><br><br>
