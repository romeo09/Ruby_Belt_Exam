<h1>Idea Details:</h1>

<div class="idea">
      <p><a href="/users/<%= @user.id %>"><strong><%= @post.user.name%></a> says:</strong> <%= @post.content %></p><hr>
</div>



<div class="postsLiked">
   <h2>People Who Like This Idea:</h2>
   <table>
      <thead>
         <tr>
            <th>Alias:</th>
            <th>Name:</th>
         </tr>
      </thead>
      <tbody>
         <tr>
            <%@liked_ideas .each do | a | %>
               <td><%= a.alias %></td>
               <td><%= a.name %></td>
         </tr>
         <%end%>
      </tbody>
   </table>
</div><hr>
<button type="button" name="profile"><a href="/posts/index/<%= session[:user_id] %>">Back To My Profile</a></button>
